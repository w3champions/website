{
  "lineWidth": 999,
  "typescript": {
    "indentWidth": 2,
    "quoteStyle": "preferDouble",
    "newLineKind": "auto",
    "nextControlFlowPosition": "maintain",
    "module.sortImportDeclarations": "maintain",
    "importDeclaration.forceMultiLine": "never",
    "jsx.forceNewLinesSurroundingContent": true,
    "operatorPosition": "maintain",
  },
  "markup": {
    "indentWidth": 2,
    "useTabs": false,
    "printWidth": 140,
    "quotes": "double",
    "closingBracketSameLine": false,
    "preferAttrsSingleLine": false,
    "scriptFormatter": "dprint",
    "whitespaceSensitivity": "css",
    "vBindStyle": "short",
    "vOnStyle": "short",
    "vForDelimiterStyle": "in",
    "vSlotStyle": "short",
    "vBindSameNameShortHand": "true",
    "component.selfClosing": true,
    "html.normal.selfClosing": false,
    "html.void.selfClosing": true,
    "svg.selfClosing": true,
    "closingTagLineBreakForEmpty": "fit"
  },
  "excludes": [
    "**/node_modules",
    "**/yarn.lock",
    "**/*.js",
    "src/locales/data.ts",
    "components.d.ts",
    ".eslintrc.cjs"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.94.0.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.19.1.wasm"
  ]
}
